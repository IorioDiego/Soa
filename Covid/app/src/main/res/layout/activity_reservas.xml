<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ReservasView1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Reservas"
        android:textSize="50sp"
        android:id="@+id/titulo"
        ></TextView>

    <TextView
        android:id="@+id/fechaReserva"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintStart_toStartOf="@+id/titulo"
        android:layout_height="wrap_content"
        android:text="Seleccione la fecha\n de su reserva:"
        android:textSize="20sp"
        ></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Reservar"
        android:layout_marginBottom="20dp"
        android:id="@+id/reservarButton"
        ></Button>

    <CalendarView
        android:layout_width="245dp"
        android:layout_height="298dp"
        app:layout_constraintTop_toBottomOf="@+id/fechaReserva"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="126dp"
        android:id="@+id/calendarReserva"
        tools:ignore="MissingConstraints"></CalendarView>

</androidx.constraintlayout.widget.ConstraintLayout>